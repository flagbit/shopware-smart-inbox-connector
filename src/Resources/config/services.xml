<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="EinsUndEins\PluginTransactionMailExtender\Mail\MailService"
                 decorates="Shopware\Core\Content\MailTemplate\Service\MailService"
                 decoration-inner-name="Shopware\Core\Content\MailTemplate\Service\MailService.inner"
        >
            <argument type="service" id="Shopware\Core\Content\MailTemplate\Service\MailService.inner" />
            <argument type="service" id="EinsUndEins\PluginTransactionMailExtender\SchemaOrg\OrderRenderer" />
        </service>

        <service id="EinsUndEins\PluginTransactionMailExtender\Mapping\StatusMapping" autowire="true" />

        <service id="EinsUndEins\PluginTransactionMailExtender\SchemaOrg\OrderRenderer" autowire="true" />

        <service alias="EinsUndEins\PluginTransactionMailExtender\SchemaOrg\OrderRenderer"
            id="EinsUndEins\PluginTransactionMailExtender\SchemaOrg\Renderer" />

        <service alias="EinsUndEins\PluginTransactionMailExtender\Mapping\StatusMapping"
            id="EinsUndEins\PluginTransactionMailExtender\Mapping\Mapping"/>
    </services>
</container>
