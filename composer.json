{
    "name": "flagbit/shopware6-transaction-mail-extender",
    "description": "Extends Shopware 6 transaction mails with a Schema.org conform HTML content",
    "type": "shopware-platform-plugin",
    "authors": [
        {
            "name": "Flagbit GmbH & Co KG",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "shopware/core": "^6.2",
        "flagbit/schemaorg-email-body": "^0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^0.12.57"
    },
    "autoload": {
        "psr-4": {
            "EinsUndEins\\PluginTransactionMailExtender\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EinsUndEins\\PluginTransactionMailExtender\\Tests\\": "tests/"
        }
    },
    "extra": {
        "shopware-plugin-class": "EinsUndEins\\PluginTransactionMailExtender\\TransactionMailExtender",
        "label": {
            "de-DE": "1&1 Transaction Mail Extender",
            "en-GB": "1&1 Transaction Mail Extender"
        }
    }
}
